<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Tasks</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ToDo.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="container">
        <header class="bg-primary text-white text-center">
            <h1 class="m-3 p-3">My Tasks</h1>
        </header>

        <!-- Step 3: Login/Logout/Register nav -->
        <div class="text-end mb-2">
            @if (Context.Session.GetString("Username") != null)
            {
                <span class="me-3">Welcome, @Context.Session.GetString("Username")!</span>
                <a class="btn btn-outline-secondary btn-sm" asp-controller="Account" asp-action="Logout">Logout</a>
            }
            else
            {
                <a class="btn btn-outline-primary btn-sm me-2" asp-controller="Account" asp-action="Login">Login</a>
                <a class="btn btn-outline-success btn-sm" asp-controller="Account" asp-action="Register">Register</a>
            }
        </div>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ToDo App by  <strong>Aryan Tripathi</strong> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
